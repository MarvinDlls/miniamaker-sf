{% extends 'base.html.twig' %}

{% block title %}Liste de vos disscusions{% endblock %}

{% block body %}

<div class="container center mt-5">
    <h1 class="text-center">Liste de vos disscusions</h1>

    <table class="table bg-white rounded-lg shadow-sm">
        <tr class="">
            <th class="">Avec</th>
            <th class="">Sujet</th>
            <th class="">Date</th>
        </tr>
        <tbody>
            {% for item in app.user.discussions %}
                <tr class="">
                    <td class="">
                        <img src="{{ asset('medias/images/users/default.png') }}" alt="{{ item.subject }}" width="25">
                    </td>
                    <td class="">
                        <p class="fs-5 fw-bold">{{ item.subject }}</p>
                        <p class="help text-secondary">{{ item.messages|length  }} messages</p>
                    </td>
                    <td class="help text-secondary">
                        {{ item.createdAt|time_diff }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>


{% endblock %}