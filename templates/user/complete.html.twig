{% extends 'base.html.twig' %}

{% block title %}Compl√©tez votre profil{% endblock %}

{% block body %}
<div class="vh-100 center">
    <form action={{ path('app_complete') }} method="post" class="border rounded p-3">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="form-group mb-3">
            <label for="username" class="form-label">Nom d'utilisateur</label>
            <input type="text" class="form-control" id="username" name="username" value="{{ app.user.username ?? '' }}" required minlength="2" maxlength="80" pattern="['a-zA-Z0-9_-']">
            <help>
            
            </help>
        </div>
        <div class="form-group mb-3">
            <label for="fullname" class="form-label">Nom complet</label>
            <input type="text" class="form-control" id="fullname" name="fullname" value="{{ app.user.fullname ?? '' }}" required>
        </div>
        <button type="submit" class="btn btn-success">
            Enregistrer
        </button>
    </form>
</div>

{% endblock %}